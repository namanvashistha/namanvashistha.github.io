---
import '../styles/reset.css';
import '../styles/globals.css';

import { name, themeColor, twitterHandle } from 'spectre:globals';
import Background from '../components/Background.astro';
import LayoutGrid from '../components/LayoutGrid.astro';
import Navbar from '../components/Navbar.astro';
import { loadEnv } from 'vite';

const { UMAMI_WEBSITE_ID } = loadEnv(process.env.NODE_ENV!, process.cwd(), '');

interface Props {
	title: string;
	description?: string;
	image?: ImageMetadata;
	pagefindIgnore?: boolean;
	article?: {
		createdAt: Date;
		updatedAt?: Date;
	};
}

const { title, description, image, pagefindIgnore, article } = Astro.props;
const shortDescription = description ? (description.length > 160 ? description.slice(0, 157) + "..." : description) : undefined;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="preload" href="/fonts/Geist.woff2" as="font" type="font/woff2" crossorigin="">
		<link rel="preload" href="/fonts/GeistMono.woff2" as="font" type="font/woff2" crossorigin="">

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<title>{title === name ? title : `${title} - ${name}`}</title>
		{shortDescription && <meta name="description" content={shortDescription} />}
		<meta name="theme-color" content={themeColor} />

		<link rel="canonical" href={Astro.url} />

		<meta name="og:title" content={title === name ? title : `${title} - ${name}`} />
		{shortDescription && <meta name="og:description" content={shortDescription} />}
		<meta name="og:image" content={image?.src || '/img/og.png'} />
		<meta name="og:url" content={Astro.url} />
		{!article && <meta name="og:type" content="website" />}
		<meta name="og:locale" content="en" />

		{article && (
			<meta name="og:type" content="article" />
			<meta property="article:published_time" content={article.createdAt.toISOString()} />
			<meta name="author" content={name} />
		)}

		{article && article.updatedAt && (
			<meta property="article:modified_time" content={article.updatedAt.toISOString()} />
		)}

		<meta name="twitter:card" content="summary_large_image" />
		{twitterHandle && (
			<meta name="twitter:site" content={twitterHandle} />
			<meta name="twitter:creator" content={twitterHandle} />
		)}
		<meta name="twitter:title" content={title === name ? title : `${title} - ${name}`} />
		{shortDescription && <meta name="twitter:description" content={shortDescription} />}
		<meta name="twitter:image" content={image?.src || '/img/og.png'} />

		{UMAMI_WEBSITE_ID && (
			<script
				defer
				src="https://cloud.umami.is/script.js"
				data-website-id={UMAMI_WEBSITE_ID}
			/>
		)}
	</head>
	<body>
		<a href="#main-content" class="skip-to-content">Skip to content</a>
		<main id="main-content" data-pagefind-ignore={pagefindIgnore}>
			<Navbar />
			<LayoutGrid>
				<slot name="left" slot="left" />
				<slot name="right" slot="right" />
			</LayoutGrid>
			<slot name="404" />
		</main>
		<Background />
	</body>
</html>
