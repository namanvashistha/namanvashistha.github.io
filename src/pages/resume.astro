---
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';
import Layout from '../layouts/Layout.astro';
---
<Layout
	title="Resume"
	description="Download my resume"
	pagefindIgnore
>
  <div class="layout-grid-left" slot="left">
    <Card class="flex-col-card resume-card">
      <div class="card-header">
        <div class="header-icon-wrapper">
          <Icon type="lucide" name="file-text" width={24} height={24} class='glow-icon' />
        </div>
        <h2>Resume</h2>
      </div>
      <p class="card-description">View or download my current resume below.</p>
      <a href="/resume.pdf" download="Naman_Vashistha_Resume.pdf" class="download-btn">
        <Icon type="lucide" name="download" width={20} height={20} />
        <span>Download PDF</span>
      </a>
    </Card>
  </div>
  <div class="layout-grid-right" slot="right">
    <Card>
      <div class="pdf-container" id="pdf-container">
        <canvas id="pdf-canvas"></canvas>
        <div class="pdf-loading">Loading resume...</div>
      </div>
    </Card>
  </div>
</Layout>

<style>
  .resume-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.875rem;
  }

  .header-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.5rem;
    line-height: 1;
  }

  .card-description {
    margin: 0;
    color: #c7c7c7;
    line-height: 1.6;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 1rem 1.5rem;
    background: var(--primary);
    color: white;
    text-decoration: none;
    border: 2px solid var(--primary);
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 1rem;
  }

  .download-btn :global(svg) {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .download-btn:hover {
    background: transparent;
    color: var(--primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--primary-rgb), 0.3);
  }

  .pdf-container {
    width: 100%;
    border: 1px solid #353535;
    background: #1a1a1a;
    position: relative;
    overflow: hidden;
  }

  #pdf-canvas {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
    z-index: 2;
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  .pdf-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--primary);
    font-size: 1.1rem;
    z-index: 1;
  }

  @media screen and (max-width: 640px) {
    .download-btn {
      font-size: 0.95rem;
      padding: 0.875rem 1.25rem;
    }
  }
</style>

<script>
  let pdfjsLoaded = false;

  const initPDF = () => {
    const canvas = document.getElementById('pdf-canvas') as HTMLCanvasElement;
    const container = document.getElementById('pdf-container') as HTMLElement;
    const loadingElement = document.querySelector('.pdf-loading') as HTMLElement;

    if (!canvas || !container) return;

    const render = () => {
      const pdfjsLib = (window as any).pdfjsLib;
      if (!pdfjsLib) return;
      
      pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';

      let renderTask: any = null;
      let activePdfPromise: any = null;

      async function renderPDF() {
        try {
          const container = document.getElementById('pdf-container');
          if (!container) return;
          
          let canvas = document.getElementById('pdf-canvas') as HTMLCanvasElement;
          const loadingElement = document.querySelector('.pdf-loading') as HTMLElement;

          // If a render is already in progress, cancel it and recreate canvas
          // to prevent "Cannot use same canvas" errors.
          if (renderTask) {
            await renderTask.cancel();
            renderTask = null;
            
            // Recreate canvas to cleanly reset state
            const oldCanvas = canvas;
            canvas = document.createElement('canvas');
            canvas.id = 'pdf-canvas';
            oldCanvas.parentNode?.replaceChild(canvas, oldCanvas);
          }

          if (!activePdfPromise) {
            const loadingTask = pdfjsLib.getDocument('/resume.pdf');
            activePdfPromise = loadingTask.promise;
          }
          
          const pdf = await activePdfPromise;
          const page = await pdf.getPage(1);

          // Give the DOM a tiny bit of time to paint the new layout during View Transitions
          setTimeout(async () => {
            // Get container width
            const containerWidth = container.clientWidth;
            
            // Get PDF viewport at scale 1
            const viewport = page.getViewport({ scale: 1 });
            
            // Calculate scale to fit width
            const scale = containerWidth / viewport.width;
            
            // Calculate height based on PDF aspect ratio
            const scaledViewport = page.getViewport({ scale });
            const pdfHeight = scaledViewport.height;
            
            // Set container height to match PDF height
            container.style.height = `${pdfHeight}px`;

            // Use device pixel ratio for sharp rendering
            const pixelRatio = window.devicePixelRatio || 1;
            const finalViewport = page.getViewport({ scale: scale * pixelRatio });

            // Set canvas size
            canvas.width = finalViewport.width;
            canvas.height = finalViewport.height;
            
            // Set display size
            canvas.style.width = `${containerWidth}px`;
            canvas.style.height = `${pdfHeight}px`;

            const context = canvas.getContext('2d');
            const renderContext = {
              canvasContext: context!,
              viewport: finalViewport,
            };

            renderTask = page.render(renderContext);
            try {
              await renderTask.promise;
              // Hide loading indicator after PDF is rendered successfully
              if (loadingElement) {
                loadingElement.style.display = 'none';
              }
            } catch (err: any) {
              if (err.name !== 'RenderingCancelledException') {
                console.error('Error rendering PDF canvas:', err);
              }
            } finally {
              renderTask = null;
            }
          }, 50);
        } catch (error: any) {
          console.error('Error loading PDF:', error);
        }
      }

      renderPDF();

      // Re-render on width changes efficiently
      let resizeTimeout: ReturnType<typeof setTimeout>;
      let lastWidth = container.clientWidth;

      // Clean up previous observer if it exists
      if ((window as any)._pdfResizeObserver) {
        (window as any)._pdfResizeObserver.disconnect();
      }

      const observer = new ResizeObserver((entries) => {
        for (let entry of entries) {
          const currentWidth = entry.contentRect.width;
          if (Math.abs(currentWidth - lastWidth) > 5) { // Only re-render if width changed significantly
            lastWidth = currentWidth;
            clearTimeout(resizeTimeout);
            // Use requestAnimationFrame for smoother performance during fast resizing
            resizeTimeout = setTimeout(() => {
              requestAnimationFrame(renderPDF);
            }, 100);
          }
        }
      });

      observer.observe(container);
      (window as any)._pdfResizeObserver = observer;
    };

    if (!pdfjsLoaded) {
      // Check if script is already present in document
      const existingScript = document.querySelector('script[src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"]');
      
      if (existingScript) {
        pdfjsLoaded = true;
        render();
      } else {
        const script = document.createElement('script');
        script.src = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js';
        script.async = true;
        document.head.appendChild(script);
        script.onload = () => {
          pdfjsLoaded = true;
          render();
        };
      }
    } else {
      render();
    }
  };

  document.addEventListener('astro:page-load', initPDF);
</script>
