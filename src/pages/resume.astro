---
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';
import Layout from '../layouts/Layout.astro';
---
<Layout
	title="Resume"
	description="Download my resume"
	pagefindIgnore
>
  <div class="layout-grid-left" slot="left">
    <Card class="flex-col-card resume-card">
      <div class="card-header">
        <div class="header-icon-wrapper">
          <Icon type="lucide" name="file-text" width={24} height={24} class='glow-icon' />
        </div>
        <h2>Resume</h2>
      </div>
      <p class="card-description">View or download my current resume below.</p>
      <a href="/resume.pdf" download="Naman_Vashistha_Resume.pdf" class="download-btn">
        <Icon type="lucide" name="download" width={20} height={20} />
        <span>Download PDF</span>
      </a>
    </Card>
  </div>
  <div class="layout-grid-right" slot="right">
    <Card>
      <div class="pdf-container">
        <iframe 
          src="/resume.pdf#toolbar=0&navpanes=0&scrollbar=0&view=Fit" 
          title="Resume Preview"
          class="pdf-viewer"
          scrolling="no"
        ></iframe>
      </div>
    </Card>
  </div>
</Layout>

<style>
  .resume-card {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 0.875rem;
  }

  .header-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
  }

  .card-header h2 {
    margin: 0;
    font-size: 1.5rem;
    line-height: 1;
  }

  .card-description {
    margin: 0;
    color: #c7c7c7;
    line-height: 1.6;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    padding: 1rem 1.5rem;
    background: var(--primary);
    color: white;
    text-decoration: none;
    border: 2px solid var(--primary);
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 1rem;
  }

  .download-btn :global(svg) {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .download-btn:hover {
    background: transparent;
    color: var(--primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--primary-rgb), 0.3);
  }

  .pdf-container {
    width: 100%;
    height: calc(100vh - 200px);
    min-height: 1000px;
    border: 1px solid #353535;
    background: #1a1a1a;
    position: relative;
  }

  .pdf-viewer {
    width: 100%;
    height: 100%;
    border: none;
    overflow: hidden;
  }

  @media screen and (max-width: 640px) {
    .pdf-container {
      height: 700px;
      min-height: 700px;
    }
    
    .download-btn {
      font-size: 0.95rem;
      padding: 0.875rem 1.25rem;
    }
  }
</style>
