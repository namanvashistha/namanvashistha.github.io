<div id="reading-progress-container">
  <div id="reading-progress-bar"></div>
</div>

<script is:inline>
  const initReadingProgress = () => {
    const progressBar = document.getElementById('reading-progress-bar');
    if (!progressBar) return;

    // Determine if we are on a post or project page by checking for the article tag
    // which has the `data-pagefind-body` attribute.
    const article = document.querySelector('article[data-pagefind-body]');
    
    // We only want the progress bar on actual articles/content pages.
    if (!article) {
      progressBar.style.width = '0%';
      return;
    }

    const updateProgress = () => {
      // Calculate how far down the user has scrolled
      const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
      
      // Calculate the total scrollable height
      const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      
      // Calculate percentage
      const scrolled = (winScroll / height) * 100;
      
      progressBar.style.width = scrolled + '%';
    };

    // Initially update
    updateProgress();

    // Listen for scroll events
    window.addEventListener('scroll', updateProgress, { passive: true });
  };

  // Run on first load and on subsequent View Transitions
  document.addEventListener('astro:page-load', initReadingProgress);
</script>

<style>
  #reading-progress-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    z-index: 100;
    pointer-events: none;
  }

  #reading-progress-bar {
    height: 100%;
    width: 0%;
    background: var(--primary);
    box-shadow: 0 0 10px var(--primary), 0 0 5px var(--primary);
    transition: width 0.1s ease-out;
  }
</style>
