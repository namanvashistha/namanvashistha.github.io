---
import '../styles/background.css';
---

<canvas id="bg-canvas" aria-hidden="true"></canvas>
<canvas id="overlay-canvas" aria-hidden="true"></canvas>

<script src="../scripts/page-background.ts"></script>
<style>
    #bg-canvas, #overlay-canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
    }

    #bg-canvas {
        z-index: -1;
    }

    #overlay-canvas {
        z-index: -1;
    }
</style>
